@model Product
@{
}
<h1>Edit</h1>

<form asp-action="Edit" method="post" style="max-width:800px">
    <div asp-validation-summary="All"></div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Code">Code:</label>
        <div class="col-sm-6">
            <input class="form-control" asp-for="Code" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Productname">Product Name:</label>
        <div class="col-sm-6">
            <input class="form-control" asp-for="Productname" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Price">Price: </label>
        <div class="col-sm-6">
            <input class="form-control" asp-for="Price" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Releasedate">Release Date:</label>
        <div class="col-sm-6">
            <input class="form-control" asp-for="Releasedate" />
        </div>
    </div>

    <input type="hidden" asp-for="ProductId" />
    <button class="btn btn-primary" type="submit">@ViewBag.Action</button>
    <a class="btn btn-danger" asp-controller="Home" asp-action="Index">Cancel</a>





</form>
