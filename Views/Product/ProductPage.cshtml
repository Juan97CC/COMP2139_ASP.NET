@model IEnumerable<Product>

@{
    ViewBag.Title = "PRODUCT";
}
<h3>Products</h3>

<table class="table">
    <thead>
        <tr>
            <th>Code</th>
            <th>Product Name</th>
            <th>Price</th>        
            <th>Release Date</th>
            <th></th>
            <th></th>
        </tr>

    </thead>

    <tbody>
        @foreach(Product product in Model)
        {
        <tr>
            <td>@product.Code</td>
            <td>@product.Productname</td>
            <td>@product.Price</td>
            <td>@product.Releasedate</td>
            <td>
                <a class="btn btn-primary" style="color:white" asp-controller="Product" asp-action="Edit" asp-route-id="@product.ProductId">Edit</a>
            </td>
            <td>
                <a class="btn btn-danger"  style="color:white" asp-controller="Product" asp-action="Delete" asp-route-id="@product.ProductId">Delete</a>
            </td>
        </tr>
        }

    </tbody>

</table>

<a class="btn btn-primary"  style="color:white" asp-controller="Product" asp-action="Add">Add</a>


