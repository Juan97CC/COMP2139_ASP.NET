@model IEnumerable<Customer>
@{
}

<h3>Customers</h3>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>City</th>
            <th>Country</th>
            <th>Email</th>
            <th>Phone</th>
            <th></th>
            <th></th>

        </tr>

    </thead>

    <tbody>
        @foreach (Customer customer in Model)
        {
        <tr>
            <td>@customer.Firstname</td>
            <td>@customer.Lastname</td>
            <td>@customer.City</td>
            <td>@customer.Country.CountryName</td>
            <td>@customer.Email</td>
            <td>@customer.Phone</td>
            <td><a class="btn btn-primary" style="color:white" asp-controller="Customer" asp-action="Edit" asp-route-id="@customer.CustomerId" asp-route-slug="@customer.slug">Edit</a></td>
            <td><a class="btn btn-danger" style="color:white" asp-controller="Customer" asp-action="Delete" asp-route-id="@customer.CustomerId">Delete</a></td>
        </tr>                      
        }

    </tbody>

</table>
<a class="btn btn-primary" asp-controller="Customer" asp-action="Add">Add</a>



